<Window x:Class="WpfTest.TextBoxExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="TextBoxExample" Height="350" Width="800" Icon="/Images/red_icon.png">
    <StackPanel Margin="20">
        <TextBox Margin="10"/>
        <TextBox Margin="10" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Language="en" SpellCheck.IsEnabled="True" IsEnabled="True"></TextBox>
    </StackPanel>
</Window>
